<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.leushinilya.loftmoney">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LoftApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_label"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Loftmoney">
        <activity
            android:name=".screens.start.SplashActivity"
            android:exported="true"
            android:noHistory="true" />
        <activity
            android:name=".screens.start.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".screens.addItem.AddItemActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true" />
        <activity
            android:name=".screens.main.MainActivityOld"
            android:exported="true" />

        <activity
            android:name=".screens.MainActivity"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>